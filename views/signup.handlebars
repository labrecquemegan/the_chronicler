<div class="login-wrap">
  <div class="login-html">
    <input id="tab-1" type="radio" name="tab" class="sign-in"  /><label
      for="tab-1"
      class="tab"
    >Sign In</label>
    <input id="tab-2" type="radio" name="tab" class="sign-up" checked/><label
      for="tab-2"
      class="tab"
    >Sign Up</label>
    <div class="login-form">
      <div class="sign-up-htm">
        <div class="group">
          <label for="user" class="label">Username</label>
          <input id="name-signup" type="text" class="input" />
        </div>
        <div class="group">
          <label for="pass" class="label">Email Address</label>
          <input id="email-signup" type="text" class="input" />
        </div>
        <div class="group">
          <label for="pass" class="label">Password</label>
          <input
            id="password-signup"
            type="password"
            class="input"
            data-type="password"
          />
        </div>
        <div class="group">
          <input type="submit" class="button" value="Sign Up" />
        </div>
        <div class="hr"></div>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>